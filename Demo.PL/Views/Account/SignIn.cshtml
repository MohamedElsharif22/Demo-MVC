@model SignInViewModel


@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="agileits-top">
	<div asp-validation-summary="All" class="alert-danger border-0 bg-transparent"></div>
	<form asp-action="SignIn">
		<input class="text email" asp-for="Email" placeholder="Email" required="">
		<input class="text" asp-for="Password" placeholder="Password" required="">
		<div class="wthree-text">
			<label class="anim mt-3">
				<input asp-for="RememberMe" class="checkbox">
				<span>Remember Me?</span>
			</label>
			<div class="clear"> </div>
		</div>
		<input type="submit" value="SIGNIN">
	</form>
	<p><a asp-action="ForgetPassword"> Forget Password !</a></p>
	<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
</div>

@section validationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

