@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="agileits-top">
	<div asp-validation-summary="All" class="alert-danger border-0 bg-transparent"></div>
	<form asp-action="SignUp">
		<input class="text" asp-for="UserName" placeholder="Username" required="">
		<div class="d-flex flex-row my-4 gx-2 justify-content-between" style="width:94.5%">
			<input class="text input-Name" asp-for="FirstName" placeholder="First Name" required="">
			<input class="text input-Name" asp-for="LastName" placeholder="Last Name" required="">
		</div>
		<input class="text email" asp-for="Email" placeholder="Email" required="">
		<input class="text" asp-for="Password" placeholder="Password" required="">
		<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
		<div class="wthree-text">
			<label class="anim">
				<input asp-for="IsAgree" class="checkbox" required="">
				<span>I Agree To The Terms & Conditions</span>
			</label>
			<div class="clear"> </div>
		</div>
		<input type="submit" value="SIGNUP">
	</form>
	<p>Don't have an Account? <a asp-action="SignIn"> Login Now!</a></p>
</div>

@section validationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
