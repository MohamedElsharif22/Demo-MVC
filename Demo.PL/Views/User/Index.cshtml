@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">

    <h1>All Users</h1>
    <br />
    <br />

    <form asp-action="Index">
        <div class="d-flex flex-row justify-content-center mb-4 ">
            <input type="text" name="searchInput" id="searchInput" placeholder="Search..." class="form-control w-75" />
            <input type="submit" value="Search" class="btn btn-success ml-2" />
        </div>
    </form>

    <hr />
    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.FirstName)</th>
                <th>@Html.DisplayNameFor(U => U.LastName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@string.Join(", ",user.Roles)</td>
                        <partial name="_CRUDBTNsPatrtialView" model="user.Id" />
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            <h3>There are No Users Exist.</h3>
        </div>
    }



</div>


